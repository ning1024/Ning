<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

	<class name="cn.hbsi.crm.domain.Customer" table="cst_customer">
		<id name="cust_id" column="cust_id">
			<generator class="native"></generator>
		</id>
		<property name="cust_name" column="cust_name"></property>
		
		<property name="cust_phone" column="cust_phone"></property>
		<property name="cust_mobile" column="cust_mobile"></property>
		<property name="cust_image" column="cust_image"></property>
		
		<!-- 配置客户和数据字典的关联关系 -->
		<many-to-one name="baseDictSource" lazy="false" class="cn.hbsi.crm.domain.BaseDict" column="cust_source"></many-to-one>
		<many-to-one name="baseDictIndustry" lazy="false" class="cn.hbsi.crm.domain.BaseDict" column="cust_industry"></many-to-one>
		<many-to-one name="baseDictLevel" lazy="false" class="cn.hbsi.crm.domain.BaseDict" column="cust_level"></many-to-one>
	</class>

</hibernate-mapping>